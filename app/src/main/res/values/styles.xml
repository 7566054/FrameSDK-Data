<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
<!--        <item name="android:windowFullscreen">true</item>-->
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="AnimBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/slide_in_from_right</item>
        <item name="android:windowExitAnimation">@anim/slide_out_to_left</item>
    </style>

    <style name="DialogLoading" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="DialogSelectOrText" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="SpinnerStyle" parent="android:style/Widget.ListView.DropDown">
        <item name="android:spinnerMode">dropdown</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:dividerHeight">0dp</item>
        <item name="android:popupBackground">@color/spinner_bg</item>
        <item name="android:background">@mipmap/spinner_bg</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:textColor">@color/text_grey</item>
        <item name="android:requiresFadingEdge">vertical</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DialogDate" parent="android:Theme.Holo.Light.NoActionBar">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <!-- 设置dialog不全屏 -->
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <!-- 除去title，如果在代码里面有其他设置会没效果的不过完全没效果 -->
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- <!–除去背景色–> -->
    </style>

    <style name="EditText">
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/selector_et_bg</item>
<!--        <item name="android:textColor">@color/black</item>-->
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:paddingStart">@dimen/layout_margin</item>
        <item name="android:layout_marginStart">@dimen/dimen_5</item>
    </style>

    <style name="TextView">
        <item name="android:textColor">@color/theme</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TextView_Gray">
        <item name="android:textColor">@color/theme_8f</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="ListView_Header_Grey" parent="TextView">
        <item name="android:gravity">center</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/text_16</item>
    </style>

    <style name="AnimHead" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/head_in</item>
        <item name="android:windowExitAnimation">@anim/head_out</item>
    </style>

    <style name="RadioButton">
        <item name="android:drawableLeft">@drawable/selector_rb_bg</item>
        <item name="android:textColor">@color/text_grey</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:button">@null</item>
        <item name="android:drawablePadding">5dp</item>
    </style>

    <style name="CheckBox">
        <item name="android:button">@null</item>
        <item name="android:textColor">@color/text_grey</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:drawableLeft">@drawable/selector_cbx_bg</item>
    </style>

    <style name="Switch">
        <item name="android:showText">true</item>
        <item name="android:thumb">@drawable/selector_sw_thumb</item>
        <item name="android:track">@drawable/selector_sw_track</item>
        <item name="android:textSize">@dimen/dimen_16</item>
        <item name="android:checked">false</item>
    </style>

    <style name="Button">
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/selector_btn_bg_theme</item>
    </style>


</resources>