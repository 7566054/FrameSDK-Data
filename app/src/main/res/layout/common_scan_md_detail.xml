<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_bg"
    >

    <RelativeLayout
        android:id="@+id/rl_scan_custom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        />

    <LinearLayout
        android:id="@+id/lin_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:background="@color/list_header_background"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_0"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:maxLines="1"
            style="@style/ListView_Header_Grey" />

        <TextView
            android:id="@+id/tv_1"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:maxLines="1"
            style="@style/ListView_Header_Grey" />

        <TextView
            android:id="@+id/tv_2"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:maxLines="1"
            style="@style/ListView_Header_Grey" />

        <TextView
            android:id="@+id/tv_3"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:maxLines="1"
            style="@style/ListView_Header_Grey" />


        <TextView
            android:id="@+id/tv_4"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:maxLines="1"
            style="@style/ListView_Header_Grey" />


        <TextView
            android:id="@+id/tv_5"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:maxLines="1"
            style="@style/ListView_Header_Grey" />


        <TextView
            android:id="@+id/tv_6"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:maxLines="1"
            style="@style/ListView_Header_Grey" />


        <TextView
            android:id="@+id/tv_7"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:maxLines="1"
            style="@style/ListView_Header_Grey" />

        <TextView
            android:id="@+id/tv_8"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:maxLines="1"
            style="@style/ListView_Header_Grey" />

        <TextView
            android:id="@+id/tv_9"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:maxLines="1"
            style="@style/ListView_Header_Grey" />


    </LinearLayout>

    <com.supoin.framesdk.widget.PullToRefreshListView
        android:id="@+id/listview_data"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/dimen_5"
        android:layout_marginRight="@dimen/dimen_5"
        android:divider="@color/transparent"
        android:dividerHeight="0dip"
        android:listSelector="@color/transparent"
        android:paddingBottom="@dimen/dimen_5"
        android:paddingTop="@dimen/dimen_2"
        android:scrollbars="none"
        app:ptrOverScroll="false" >
    </com.supoin.framesdk.widget.PullToRefreshListView>


</LinearLayout>