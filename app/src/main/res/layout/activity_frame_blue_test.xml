<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" >

    <include
        layout="@layout/titlebar_base"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="top" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="10dp"
        >

        <EditText
            android:id="@+id/et_text"
            style="@style/EditText"
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:gravity="top"
            android:paddingTop="@dimen/dimen_10"
            android:hint="请输入要打印的文本内容"
            android:inputType="textMultiLine" />

        <Button
            android:id="@+id/btn_print_text"
            android:layout_marginTop="10dp"
            style="@style/Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="打印文本" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10"
        android:orientation="vertical"
        >

        <EditText
            android:id="@+id/et_barcode"
            style="@style/EditText"
            android:paddingTop="@dimen/dimen_10"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:gravity="top"
            android:hint="请输入要打印的条码内容"
            android:inputType="textMultiLine" />

        <Button
            android:id="@+id/btn_print_barcode"
            android:layout_marginTop="10dp"
            style="@style/Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="打印一维条码" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10"
        android:orientation="vertical"
        >

        <EditText
            android:id="@+id/et_qrCode"
            style="@style/EditText"
            android:paddingTop="@dimen/dimen_10"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:gravity="top"
            android:hint="请输入要打印的二维条码内容"
            android:inputType="textMultiLine" />

        <Button
            android:id="@+id/btn_print_qrCode"
            android:layout_marginTop="10dp"
            style="@style/Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="打印二维条码" />

    </LinearLayout>



</LinearLayout>
