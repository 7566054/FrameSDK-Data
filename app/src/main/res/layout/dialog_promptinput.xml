<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dimen_300"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_dialog_bg_white" >

    <TextView
        android:id="@+id/tv_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="title"
        android:textColor="@color/theme"
        android:textSize="@dimen/dimen_20" />

    <EditText
        android:id="@+id/et_dialog_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_dialog_title"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/selector_et_bg"
        android:padding="@dimen/dimen_5"
        android:textColor="@color/black"
        android:singleLine="true"
        android:textSize="@dimen/dimen_20" />

    <RelativeLayout
        android:id="@+id/ly_dialog_syman_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_40"
        android:layout_below="@id/et_dialog_message" >

        <TextView
            android:id="@+id/tv_dialog_syman_h"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1"
            android:layout_alignParentTop="true"
            android:background="#EFEFEF" />

        <TextView
            android:id="@+id/tv_dialog_syman_v"
            android:layout_width="@dimen/dimen_1"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:background="#EFEFEF" />

        <Button
            android:id="@+id/btn_dialog_syman_ok"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/tv_dialog_syman_h"
            android:layout_toLeftOf="@id/tv_dialog_syman_v"
            android:background="@drawable/selector_btn_bg_theme"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_20" />

        <Button
            android:id="@+id/btn_dialog_syman_cancel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/tv_dialog_syman_h"
            android:layout_toRightOf="@id/tv_dialog_syman_v"
            android:background="@drawable/selector_btn_bg_gray"
            android:textColor="#666666"
            android:textSize="@dimen/dimen_20" />
    </RelativeLayout>

</RelativeLayout>